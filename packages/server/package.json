{
  "name": "@koa-html-template/server",
  "version": "2.0.0",
  "description": "Koa HTML template engine server with PostgreSQL support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "node scripts/db-setup.js",
    "db:password": "node scripts/set-password.js",
    "db:test": "node scripts/test-connection.js",
    "db:disconnect": "node scripts/db-disconnect.js",
    "db:service": "node scripts/db-service.js",
    "db:migrate": "node -r tsx/cjs src/database/migrate.ts",
    "db:create": "node scripts/db-commands.js \"CREATE DATABASE koa_template_db\"",
    "db:drop": "node scripts/db-commands.js \"DROP DATABASE IF EXISTS koa_template_db\"",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@types/node": "^24.0.15",
    "dotenv": "^16.3.1",
    "koa": "^2.16.2",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-router": "^12.0.0",
    "pg": "^8.11.3",
    "root-path-plugin": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "koa",
    "template-engine",
    "server",
    "postgresql",
    "typescript"
  ],
  "author": "Jericho",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dingxihu/koa-html-template.git",
    "directory": "packages/server"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}