{
  "name": "@koa-html-template/shared",
  "version": "2.0.0",
  "description": "Shared types and utilities for koa-html-template monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "rollup": "^3.29.4",
    "@rollup/plugin-typescript": "^11.1.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "shared",
    "types",
    "utilities",
    "typescript"
  ],
  "author": "Jericho",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dingxihu/koa-html-template.git",
    "directory": "packages/shared"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
} 