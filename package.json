{
  "name": "koa-html-template-monorepo",
  "version": "2.0.0",
  "description": "Koa HTML template engine with TypeScript support - Monorepo with core, server, client, shared packages and documentation",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:core": "npm run build --workspace=packages/core",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:server": "npm run build --workspace=packages/server",
    "build:client": "npm run build --workspace=packages/client",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:docs\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:docs": "npm run dev --workspace=packages/docs",
    "preview:client": "npm run preview --workspace=packages/client",
    "start:server": "npm run start --workspace=packages/server",
    "start:client": "npm run start --workspace=packages/client",
    "clean": "rimraf packages/*/dist packages/*/node_modules/.cache",
    "clean:all": "rimraf node_modules packages/*/node_modules packages/*/dist",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dingxihu/koa-html-template.git"
  },
  "keywords": [
    "koa-html-template",
    "typescript",
    "template-engine",
    "monorepo",
    "koa",
    "react",
    "postgresql"
  ],
  "author": "Jericho",
  "license": "ISC",
  "homepage": "https://github.com/dingxihu/koa-html-template#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}