{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@koa-html-template/core": [
        "./packages/core/src"
      ],
      "@koa-html-template/server": [
        "./packages/server/src"
      ],
      "@koa-html-template/client": [
        "./packages/client/src"
      ],
      "@koa-html-template/shared": [
        "./packages/shared/src"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/server"
    },
    {
      "path": "./packages/client"
    }
  ]
}